extends layout 

block content 
  h1=title 

  form(action="", method="post")
    div.form-group 
      label(for="book") Book: 
      select#book.form-control(name="book" required)
        option(value="") --Please select a Book--
        for book in book_list 
          if selected_book==book._id.toString()
            option(value=book._id, selected) #{book.title} 
          else 
            option(value=book._id) #{book.title} 

    div.form-group
      label(for="imprint") Imprint: 
      input#imprint.form-control(type="text" placeholder="Publisher & date information" name="imprint" required value=(undefined===bookinstance ? '' : bookinstance.imprint))
    div.form-group 
      label(for='due_back') Date when book available:
      input#due_back.form-control(type='date' name='due_back' value=(undefined===bookinstance ? '' : bookinstance.due_back_yyyy_mm_dd))
    div.form-group 
      label(for='status') Status:
      select#status.form-control(name='status' required)
        option(value='') --Please select a status--
        each status in status_list
          if undefined===bookinstance || bookinstance.status!=status
            option(value=status)= status
          else 
            option(value=status selected)= status

    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul 
      for error in errors 
        li!= error.msg